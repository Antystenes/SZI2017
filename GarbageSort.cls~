(defun *database* ()
  ((wine-bottle (is-a bottle)
		 (made-of glass)
		 (size average))
    (beer-bottle (is-a bottle)
		 (made-of glass)
		 (size small))
    (orange-juice-bottle (is-a bottle)
			 (made-of cardboard)
			 (made-of plastic)
			 (size average))
    (bread (is-a food)
	   (made-of organic)
	   (size small))
    (desk (is-a furniture)
	  (made-of wood)
	  (size big))))

(defrule garbage ""
  (made-of glass)
  =>
  (assert (put-into glass))

  (made-of organic)
  =>
  (assert (put-into others))

  (made-of wood)
  =>
  (assert (put-into wooden)))
